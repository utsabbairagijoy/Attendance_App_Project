#Exercise1:-
import math 
radius = float(input("Enter the Radius of circle: "))
circumference = 2 * math.pi * radius
print(f"The circumference is : {round(circumference, 2)}")
#Exercise2:
import math
radius = float(input("Enter the radius of circle:"))
area = math.pi * pow(radius, 2)
print(f"The area of the circle is:{area}")

